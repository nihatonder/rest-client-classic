<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc.xsd">

   <mvc:annotation-driven/>

   <context:annotation-config/>

   <context:property-placeholder location="classpath:application.properties"/>

   <bean id="gcpTokenProvider" class="com.nonder.rest_app.interceptor.GcpTokenProvider"/>

   <bean id="oauth2ClientInterceptor" class="com.nonder.rest_app.interceptor.OAuth2ClientInterceptor">
      <constructor-arg ref="gcpTokenProvider"/>
   </bean>

   <bean id="restClient" class="com.nonder.rest_app.config.RestClientFactoryBean">
      <property name="interceptors">
         <list>
            <ref bean="oauth2ClientInterceptor"/>
         </list>
      </property>
   </bean>
   <bean id="protectedApiClient" class="com.nonder.rest_app.client.ProtectedApiClient">
      <constructor-arg ref="restClient"/>
   </bean>

   <bean id="exampleController" class="com.nonder.rest_app.controller.ExampleController">
      <constructor-arg ref="protectedApiClient"/>
   </bean>
</beans>